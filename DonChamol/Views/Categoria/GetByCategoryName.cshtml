@model Categoria

@{
    ViewBag.Title = "Categoría Nombre";
}

<div class="container mt-4">
    <h2 class="text-center">Detalles de la Categoría</h2>

    <!-- Formulario de búsqueda de categorías -->
    <form asp-controller="Categoria" asp-action="GetByCategoryName" method="get" class="form-inline justify-content-center mb-4">
        <div class="form-group">
            <input type="text" name="categoryName" class="form-control mr-2" placeholder="Buscar categoría por nombre" required />
        </div>
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>

    <!-- Mostrar resultados si la categoría existe -->
    @if (Model != null)
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ID de Categoría</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.id_Categoria</td>
                        <td>@Model.Nombre</td>
                        <td>@Model.Descripcion</td>
                    </tr>
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">¡Categoría No Encontrada!</h4>
            <p>La categoría que estás buscando no existe. Por favor, verifica el nombre y vuelve a intentarlo.</p>
        </div>
    }

    <!-- Enlace para volver a la lista de categorías -->
    <div class="text-center mt-4">
        <a href="@Url.Action("Index", "Categoria")" class="btn btn-primary">Volver a la lista de categorías</a>
    </div>
</div>