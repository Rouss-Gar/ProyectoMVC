@model List<DonChamol.Models.Categoria>

<h2>Categorías</h2>
<a asp-action="Create" class="btn btn-primary">Agregar Nueva Categoría</a>

<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var categoria in Model)
                {
                    <tr>
                        <td>@categoria.id_Categoria</td>
                        <td>@categoria.Nombre</td>
                        <td>@categoria.Descripcion</td>
                        <td>@(categoria.Estado ? "Activo" : "Inactivo")</td>
                        <td class="actions">
                            <a asp-action="GetCategoriaById" asp-route-id="@categoria.id_Categoria" class="btn btn-warning">Editar</a>

                            <form asp-action="ToggleEstado" asp-route-id="@categoria.id_Categoria" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-secondary">
                                    @(categoria.Estado ? "Desactivar" : "Activar")
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">No hay categorías disponibles.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
  
.table-container {
    max-height: 400px;
    overflow-y: auto;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}


.table {
    width: 100%;
    border-collapse: collapse;
    font-size: 16px;
    background-color: #ffffff;
    border-radius: 8px;
    overflow: hidden;
}


.table thead {
    position: sticky;
    top: 0;
    background-color: #007bff;
    color: #ffffff;
    z-index: 1;
}

.table thead th {
    padding: 12px;
    font-weight: bold;
    text-align: center;
    border-bottom: 2px solid #ddd;
    text-transform: uppercase;
}


.table tbody tr:nth-child(even) {
    background-color: #f9fafb;
}

.table tbody tr:hover {
    background-color: #e6f2ff;
    transition: background-color 0.3s ease;
}

.table tbody td {
    padding: 12px;
    text-align: center;
    border-bottom: 1px solid #ddd;
}


.btn-primary {
    background-color: #007bff;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-primary:hover {
    background-color: #0056b3;
    transform: translateY(-1px);
}

.btn-warning {
    background-color: #ffc107;
    border: none;
    color: #212529;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-warning:hover {
    background-color: #e0a800;
    transform: translateY(-1px);
}

.btn-secondary {
    background-color: #6c757d;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-secondary:hover {
    background-color: #5a6268;
    transform: translateY(-1px);
}


.table tbody td.actions {
    display: flex;
    justify-content: center;
    gap: 10px;
}
</style>
