@model Categoria

@{
    ViewData["Title"] = "Editar Categoría por Nombre";
}

<h1>Editar Categoría</h1>

<form asp-action="EditCategory" method="post">
    <input asp-for="id_Categoria" type="hidden" />

    <div class="form-group mb-3">
        <label asp-for="Nombre" class="form-label">Nombre de Categoría</label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Descripcion" class="form-label">Descripción</label>
        <input asp-for="Descripcion" class="form-control" required />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a href="@Url.Action("Index", "Categoria")" class="btn btn-secondary">Cancelar</a>
</form>
