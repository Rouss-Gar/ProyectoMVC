@model List<DonChamol.Models.GetAllOrden>

<h2>Menú</h2>
<a asp-action="Create" class="btn btn-primary">Agregar Orden</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.id_Menu</td>
                    <td>@item.Nombre</td>
                    <td>@item.Descripcion</td>
                    <td>@item.Precio.ToString("C")</td> <!-- Muestra el precio en formato moneda -->
                    <td>
                        <a asp-action="EditOrdenById" asp-route-id="@item.id_Menu" class="btn btn-warning">Editar</a>
                        <form asp-action="DeleteOrdenById" asp-route-id="@item.id_Menu" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5">No hay ítems de menú disponibles.</td>
            </tr>
        }
    </tbody>
</table>
