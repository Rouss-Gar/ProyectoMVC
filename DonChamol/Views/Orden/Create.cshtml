@model DonChamol.Models.Orden

@{
    ViewBag.Title = "Crear Orden";
}

<h2>Crear Orden</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- Selección de Cliente -->
    <div class="form-group">
        @Html.LabelFor(m => m.id_Cliente, "Cliente")
        @Html.DropDownListFor(
                m => m.id_Cliente,
                ViewBag.Cliente != null
                ? new SelectList(ViewBag.Cliente, "id_Cliente", "Nombre")
                : new SelectList(Enumerable.Empty<SelectListItem>()),
                "Seleccione un Cliente",
                new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.id_Cliente, "", new { @class = "text-danger" })
    </div>

    <!-- Selección de Mesero -->
    <div class="form-group">
        @Html.LabelFor(m => m.id_Mesero, "Mesero")
        @Html.DropDownListFor(m => m.id_Mesero, new SelectList(ViewBag.Meseros, "id_Mesero", "Nombre"), "Seleccione un Mesero", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.id_Mesero, "", new { @class = "text-danger" })
    </div>

    <!-- Selección de Mesa -->
    <div class="form-group">
        @Html.LabelFor(m => m.id_Mesa, "Mesa")
        @Html.DropDownListFor(m => m.id_Mesa, new SelectList(ViewBag.Mesas, "id_Mesa", "Numero"), "Seleccione una Mesa", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.id_Mesa, "", new { @class = "text-danger" })
    </div>

    <!-- Selección del Menú -->
    <div class="form-group">
        @Html.LabelFor(m => m.id_Menu, "Menú")
        @Html.DropDownListFor(m => m.id_Menu, new SelectList(ViewBag.MenuItems, "id_Menu", "Nombre"), "Seleccione un Menú", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.id_Menu, "", new { @class = "text-danger" })
    </div>

    <!-- Campo de Fecha de la Orden -->
    <div class="form-group">
        @Html.LabelFor(m => m.Fecha_Orden, "Fecha de la Orden")
        @Html.TextBoxFor(m => m.Fecha_Orden, new { @class = "form-control", @type = "date" })
        @Html.ValidationMessageFor(m => m.Fecha_Orden, "", new { @class = "text-danger" })
    </div>

    <!-- Campo de Total (si es necesario) -->
    <div class="form-group">
        @Html.LabelFor(m => m.Total, "Total")
        @Html.EditorFor(m => m.Total, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.Total, "", new { @class = "text-danger" })
    </div>

    <!-- Botones -->
    <div class="form-group">
        <button type="submit" class="btn btn-success">Guardar</button>
        <a href="@Url.Action("GetAllOrdenes", "Orden")" class="btn btn-secondary">Cancelar</a>
    </div>
}
