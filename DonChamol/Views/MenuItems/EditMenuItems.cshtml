@model DonChamol.Models.MenuItems

<h2>Edit Menu Item</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="id_Menu" />
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Descripcion"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Precio"></label>
        <input asp-for="Precio" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Estado"></label>
        <input asp-for="Estado" type="checkbox" />
    </div>
    <div class="form-group">
        <label asp-for="id_Categoria"></label>
        <input asp-for="id_Categoria" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

