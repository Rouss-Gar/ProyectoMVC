@model DonChamol.Models.MenuItems

@{
    ViewData["Title"] = "Editar Menú";
}

<h1>Editar Menú</h1>

<form asp-action="UpdateMenuItemById" method="post">
    <input asp-for="id_Menu" type="hidden" />

    <div class="form-group mb-3">
        <label asp-for="Nombre" class="form-label">Nombre del Menú</label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Descripcion" class="form-label">Descripción</label>
        <textarea asp-for="Descripcion" class="form-control" required></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Precio" class="form-label">Precio</label>
        <input asp-for="Precio" class="form-control" required />
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Estado" class="form-label">Estado</label>
        <input asp-for="Estado" type="checkbox" class="form-check-input" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="id_Categoria" class="form-label">Categoría</label>
        <select asp-for="id_Categoria" class="form-control">
            @foreach (var categoria in ViewBag.Categorias as List<DonChamol.Models.Categoria> ?? new List<DonChamol.Models.Categoria>())
            {
                <option value="@categoria.id_Categoria"
                        selected="@(Model.id_Categoria == categoria.id_Categoria ? "selected" : "")">
                    @categoria.Nombre
                </option>
            }


        </select>
        <span asp-validation-for="id_Categoria" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a href="@Url.Action("GetAllMenuItems", "MenuItems")" class="btn btn-secondary">Cancelar</a>
</form>
