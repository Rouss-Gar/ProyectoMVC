@model List<DonChamol.Models.MenuItems>

<h2>Menu Items</h2>
<a asp-action="Create" class="btn btn-primary">Agregar Nuevo Elemento de Menú</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Categoría</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var menuItems in Model)
            {
                <tr>
                    <td>@menuItems.id_Menu</td>
                    <td>@menuItems.Nombre</td>
                    <td>@menuItems.Descripcion</td>
                    <td>@menuItems.Precio.ToString("C")</td>
                    <td>@(menuItems.Estado ? "Activo" : "Inactivo")</td>
                    <td>@menuItems.Categoria?.Nombre</td>
                    <td>
                        <a asp-action="EditMenuItems" asp-route-id="@menuItems.id_Menu" class="btn btn-warning">Editar</a>
                        <form asp-action="DeleteMenuItemById" asp-route-id="@menuItems.id_Menu" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                        <form asp-action="ToggleEstado" asp-route-id="@menuItems.id_Menu" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-secondary">
                                @(menuItems.Estado ? "Desactivar" : "Activar")
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">No hay elementos de menú disponibles.</td>
            </tr>
        }
    </tbody>
</table>
<style>

.table-container {
    max-height: 400px;
    overflow-y: auto;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.table {
    width: 100%;
    border-collapse: collapse;
    font-size: 16px;
    background-color: #ffffff;
    border-radius: 8px;
    overflow: hidden;
}


.table thead {
    position: sticky;
    top: 0;
    background-color: #673ab7; 
    color: #ffffff;
    z-index: 1;
}

.table thead th {
    padding: 12px;
    font-weight: bold;
    text-align: center;
    border-bottom: 2px solid #ddd;
    text-transform: uppercase;
}


.table tbody tr:nth-child(even) {
    background-color: #f9fafb;
}

.table tbody tr:hover {
    background-color: #e3e4fa; 
    transition: background-color 0.3s ease;
}

.table tbody td {
    padding: 12px;
    text-align: center;
    border-bottom: 1px solid #ddd;
}


.btn-primary {
    background-color: #03a9f4;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-primary:hover {
    background-color: #0288d1;
    transform: translateY(-1px);
}

.btn-warning {
    background-color: #ff9800;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-warning:hover {
    background-color: #fb8c00;
    transform: translateY(-1px);
}

.btn-danger {
    background-color: #f44336;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-danger:hover {
    background-color: #e53935;
    transform: translateY(-1px);
}

.btn-secondary {
    background-color: #9e9e9e;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-secondary:hover {
    background-color: #757575;
    transform: translateY(-1px);
}


.table tbody td.actions {
    display: flex;
    justify-content: center;
    gap: 8px;
}
</style>