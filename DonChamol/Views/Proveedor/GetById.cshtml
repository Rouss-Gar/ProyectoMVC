@model DonChamol.Models.Proveedor

@{
    ViewBag.Title = "Proveedor por ID";
}

<div class="container mt-4">
    <h2 class="text-center">Detalles del Proveedor</h2>

    @if (Model != null)
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ID de Proveedor</th>
                        <th>Nombre</th>
                        <th>Dirección</th>
                        <th>Teléfono</th>
                        <th>Email</th>
                        <th>Estado</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.id_proveedor</td>
                        <td>@Model.nombre?.Trim()</td>
                        <td>@Model.direccion?.Trim()</td>
                        <td>@Model.telefono?.Trim()</td>
                        <td>@Model.correo?.Trim()</td>
                        <td>
                            <button class="btn @(Model.estado ? "btn-success" : "btn-warning")" style="width: 100%;">
                                @(Model.estado ? "Activo" : "Inactivo")
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">¡Proveedor No Encontrado!</h4>
            <p>El proveedor que estás buscando no existe. Por favor, verifica el ID y vuelve a intentarlo.</p>
        </div>
    }

    <!-- Enlace para volver a la lista de proveedores -->
    <div class="text-center mt-4">
        <a href="@Url.Action("GetAll", "Proveedor")" class="btn btn-primary">Volver a la lista de proveedores</a>
    </div>
</div>
