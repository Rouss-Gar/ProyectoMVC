@model IEnumerable<Inventario>


@{
    ViewData["Title"] = "inventario";
}

<h1><i class="fas fa-warehouse"></i>Lista en el inventario</h1>



<table class="table table-striped table-bordered">
    <thead class ="thead-dark">
        <tr>
            <th style="font-size: 0.8em; font-weight: bold;">ID</th>
            <th style="font-size: 0.8em; font-weight: bold;">Nombre</th>
            <th style="font-size: 0.8em; font-weight: bold;">Precio</th>
            <th style="font-size: 0.8em; font-weight: bold;">Stock</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var inventario in Model)
            {
                <tr>
                    <!-- Inventario ID -->
                    <td style="font-size: 0.8em; font-weight: bold;">
                        <i class="fas fa-box"></i> @inventario.InventarioID
                    </td>
                    <!-- Nombre del producto -->
                    <td style="font-size: 0.8em; font-weight: bold;">
                        <i class="fas fa-tag"></i> @inventario.nombre_producto?.Trim()
                    </td>
                    <!-- Precio unitario -->
                    <td style="font-size: 0.8em; font-weight: bold;">
                        <i class="fas fa-dollar-sign"></i> @inventario.PrecioUnitario.ToString("C2")
                    </td>
                    <!-- Unidades en stock -->
                    <td style="font-size: 0.8em; font-weight: bold;">
                        <i class="fas fa-cubes"></i> @inventario.UnidadesEnStock
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" style="font-size: 0.8em; font-weight: bold;">No hay datos de inventario disponibles.</td>
            </tr>
        }
    </tbody>

</table>


