@model Orden

@{
    ViewData["Title"] = "Crear Nueva Orden";
}

<h2>Crear Nueva Orden</h2>

<!-- Botón para abrir el modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createOrderModal">
    Agregar Orden
</button>

<!-- Modal -->
<div class="modal fade" id="createOrderModal" tabindex="-1" aria-labelledby="createOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createOrderModalLabel">Nueva Orden</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="id_Cliente" class="form-label"></label>
                        <select asp-for="id_Cliente" class="form-select" asp-items="ViewBag.Clientes" required>
                            <option value="">Seleccione un cliente</option>
                        </select>
                        <span asp-validation-for="id_Cliente" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="id_Mesero" class="form-label"></label>
                        <select asp-for="id_Mesero" class="form-select" asp-items="ViewBag.Meseros" required>
                            <option value="">Seleccione un mesero</option>
                        </select>
                        <span asp-validation-for="id_Mesero" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="id_Mesa" class="form-label"></label>
                        <select asp-for="id_Mesa" class="form-select" asp-items="ViewBag.Mesas" required>
                            <option value="">Seleccione una mesa</option>
                        </select>
                        <span asp-validation-for="id_Mesa" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Fecha_Orden" class="form-label"></label>
                        <input asp-for="Fecha_Orden" class="form-control" type="datetime-local" required />
                        <span asp-validation-for="Fecha_Orden" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                        <button type="submit" class="btn btn-primary">Agregar Orden</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<a href="@Url.Action("GetAllOrden", "Orden")" class="btn btn-link">Volver a la lista de órdenes</a>
