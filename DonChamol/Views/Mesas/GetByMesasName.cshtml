S@model IEnumerable<DonChamol.Models.Mesa>

@{
    ViewData["Title"] = "Buscar Mesa";
}

<h2>Buscar Mesa</h2>

<form asp-action="GetByMesaName" method="post">
    <div class="mb-3">
        <label for="numeroMesa" class="form-label">Número de Mesa:</label>
        <input type="text" id="numeroMesa" name="numeroMesa" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

@if (Model != null && Model.Any())
{
    <h3>Resultados de la búsqueda:</h3>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID Mesa</th>
                <th>Número de Mesa</th>
                <th>Capacidad</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var mesa in Model)
            {
                <tr>
                    <td>@mesa.id_Mesa</td>
                    <td>@mesa.Numero_Mesa</td>
                    <td>@mesa.Capacidad</td>
                    <td>@(mesa.Estado ? "Activo" : "Inactivo")</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model != null)
{
    <p>No se encontraron mesas que coincidan con la búsqueda.</p>
}

<a href="@Url.Action("GetAllMesas", "Mesas")" class="btn btn-secondary">Volver a la lista de mesas</a>
