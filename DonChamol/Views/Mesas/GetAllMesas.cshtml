@model List<DonChamol.Models.Mesas>

@{
    ViewData["Title"] = "Lista de Mesas";
}

<h2>Lista de Mesas</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID Mesa</th>
            <th>Número de Mesa</th>
            <th>Capacidad</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mesa in Model)
        {
            <tr>
                <td>@mesa.id_Mesa</td>
                <td>@mesa.Numero_Mesa</td>
                <td>@mesa.Capacidad</td>
                <td>@(mesa.Estado ? "Activo" : "Inactivo")</td>

                <td>




                    <form asp-action="DeleteMesa" asp-route-id="@mesa.id_Mesa" method="post">
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                    </form>


                    <form asp-action="ToggleEstado" asp-route-id="@mesa.id_Mesa" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-secondary">
                            @(mesa.Estado ? "Libre" : "Ocupado")
                        </button>
                    </form>



                </td>


            </tr>

        }
    </tbody>
</table>

<a href="@Url.Action("Create","Mesas")" class="btn btn-primary">Agregar Nueva Mesa</a>
<style>
    /* Tabla de Mesas */
.table-container {
    max-height: 400px;
    overflow-y: auto;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.table {
    width: 100%;
    border-collapse: collapse;
    font-size: 16px;
    background-color: #ffffff;
    border-radius: 8px;
    overflow: hidden;
}

/* Encabezado */
.table thead {
    position: sticky;
    top: 0;
    background-color: #007bff;
    color: #ffffff;
    z-index: 1;
}

.table thead th {
    padding: 12px;
    font-weight: bold;
    text-align: center;
    border-bottom: 2px solid #ddd;
    text-transform: uppercase;
}

/* Filas */
.table tbody tr:nth-child(even) {
    background-color: #f9fafb;
}

.table tbody tr:hover {
    background-color: #e6f2ff;
    transition: background-color 0.3s ease;
}

.table tbody td {
    padding: 12px;
    text-align: center;
    border-bottom: 1px solid #ddd;
}

/* Botones de Acción */
.btn-primary {
    background-color: #007bff;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-primary:hover {
    background-color: #0056b3;
    transform: translateY(-1px);
}

.btn-danger {
    background-color: #dc3545;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-danger:hover {
    background-color: #c82333;
    transform: translateY(-1px);
}

.btn-secondary {
    background-color: #6c757d;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-secondary:hover {
    background-color: #5a6268;
    transform: translateY(-1px);
}

/* Alineación de Acciones */
.table tbody td.actions {
    display: flex;
    justify-content: center;
    gap: 10px;
}

</style>