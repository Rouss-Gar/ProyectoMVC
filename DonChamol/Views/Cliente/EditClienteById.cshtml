@model Cliente

@{
    ViewData["Title"] = "Editar Cliente por ID";
}

<h2>Editar Cliente</h2>

<form asp-action="EditClienteById" method="post">
    <input asp-for="id_Cliente" type="hidden" />

    <div class="form-group mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" required />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Apellido" class="form-label">Apellido</label>
        <input asp-for="Apellido" class="form-control" required />
        <span asp-validation-for="Apellido" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Telefono" class="form-label">Teléfono</label>
        <input asp-for="Telefono" class="form-control" required />
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Correo" class="form-label">Correo</label>
        <input asp-for="Correo" class="form-control" required />
        <span asp-validation-for="Correo" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Direccion" class="form-label">Dirección</label>
        <input asp-for="Direccion" class="form-control" required />
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="FechaRegistro" class="form-label">Fecha de Registro</label>
        <input asp-for="FechaRegistro" type="date" class="form-control" required />
        <span asp-validation-for="FechaRegistro" class="text-danger"></span>
    </div>
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a href="@Url.Action("GetAllCliente", "Cliente")" class="btn btn-secondary">Cancelar</a>
</form>
