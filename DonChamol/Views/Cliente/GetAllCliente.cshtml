@model List<DonChamol.Models.Cliente>

<h2>Clientes</h2>
<a asp-action="Create" class="btn btn-primary">Agregar Nuevo Cliente</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Teléfono</th>
            <th>Correo</th>
            <th>Dirección</th>
            <th>Fecha de Registro</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var cliente in Model)
            {
                        <tr>
                            <td>@cliente.id_Cliente</td>
                            <td>@cliente.Nombre</td>
                            <td>@cliente.Apellido</td>
                            <td>@cliente.Telefono</td>
                            <td>@cliente.Correo</td>
                            <td>@cliente.Direccion</td>
                            <td>@cliente.FechaRegistro.ToString("dd/MM/yyyy")</td>
                            <td>@(cliente.Estado ? "Activo" : "Inactivo")</td>
                            <td>
                                <a asp-action="EditClienteById" asp-route-id="@cliente.id_Cliente" class="btn btn-warning">Editar</a>
                                <form asp-action="DeleteClienteById" asp-route-id="@cliente.id_Cliente" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger">Eliminar</button>
                                </form>
                                <form asp-action="ToggleEstado" asp-route-id="@cliente.id_Cliente" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-secondary">
                                @(cliente.Estado ? "Desactivar" : "Activar")
                                    </button>
                                </form>
                            </td>
                        </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9">No hay clientes disponibles.</td>
            </tr>
        }
    </tbody>
</table>
<style>
    /* Tabla de Clientes */
.table-container {
    max-height: 400px;
    overflow-y: auto;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.table {
    width: 100%;
    border-collapse: collapse;
    font-size: 16px;
    background-color: #ffffff;
    border-radius: 8px;
    overflow: hidden;
}

/* Encabezado */
.table thead {
    position: sticky;
    top: 0;
    background-color: #007bff;
    color: #ffffff;
    z-index: 1;
}

.table thead th {
    padding: 12px;
    font-weight: bold;
    text-align: center;
    border-bottom: 2px solid #ddd;
    text-transform: uppercase;
}

/* Filas */
.table tbody tr:nth-child(even) {
    background-color: #f9fafb;
}

.table tbody tr:hover {
    background-color: #e6f2ff;
    transition: background-color 0.3s ease;
}

.table tbody td {
    padding: 12px;
    text-align: center;
    border-bottom: 1px solid #ddd;
}

/* Botones de Acción */
.btn-primary {
    background-color: #007bff;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-primary:hover {
    background-color: #0056b3;
    transform: translateY(-1px);
}

.btn-warning {
    background-color: #ffc107;
    border: none;
    color: #212529;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-warning:hover {
    background-color: #e0a800;
    transform: translateY(-1px);
}

.btn-danger {
    background-color: #dc3545;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-danger:hover {
    background-color: #c82333;
    transform: translateY(-1px);
}

.btn-secondary {
    background-color: #6c757d;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-secondary:hover {
    background-color: #5a6268;
    transform: translateY(-1px);
}

/* Alineación de Acciones */
.table tbody td.actions {
    display: flex;
    justify-content: center;
    gap: 10px;
}

</style>
