@model DonChamol.Models.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<h1>Editar Producto</h1>

<form asp-action="Edit" method="post">
    <!-- Campo oculto para el ID del producto -->
    <input asp-for="id_producto" type="hidden" />

    <div class="form-group">
        <label asp-for="nombre_producto" class="control-label">Nombre del Producto</label>
        <input asp-for="nombre_producto" class="form-control" required />
        <span asp-validation-for="nombre_producto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="descripcion" class="control-label">Descripción</label>
        <textarea asp-for="descripcion" class="form-control" rows="3"></textarea>
        <span asp-validation-for="descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="fecha_vencimiento" class="control-label">Fecha de Vencimiento</label>
        <input asp-for="fecha_vencimiento" class="form-control" type="date" />
        <span asp-validation-for="fecha_vencimiento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="estado" class="control-label">Estado</label>
        <select asp-for="estado" class="form-control" required>
            <option value="">Seleccione un estado</option>
            <option value="true">Activo</option>
            <option value="false">Inactivo</option>
        </select>
        <span asp-validation-for="estado" class="text-danger"></span>
    </div>

    <!-- Dropdown para seleccionar la categoría -->
    <div class="form-group">
        <label for="id_Categoria" class="control-label">Categoría</label>
        <select asp-for="id_Categoria" class="form-control" asp-items="ViewBag.Categorias" required>
            <option value="">Seleccione una categoría</option>
        </select>
        <span asp-validation-for="id_Categoria" class="text-danger"></span>
    </div>

    <!-- Dropdown para seleccionar el proveedor -->
    <div class="form-group">
        <label for="id_proveedor" class="control-label">Proveedor</label>
        <select asp-for="id_proveedor" class="form-control" asp-items="ViewBag.Proveedores" required>
            <option value="">Seleccione un proveedor</option>
        </select>
        <span asp-validation-for="id_proveedor" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Actualizar</button>
    <a href="@Url.Action("GetAll", "Producto")" class="btn btn-secondary">Cancelar</a>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
