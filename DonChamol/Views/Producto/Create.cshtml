@model DonChamol.Models.Producto

@{
    ViewData["Title"] = "Crear Nuevo Producto";
    ViewData["ShowFooter"] = false;
}

<h2 class="text-center">Crear Nuevo Producto</h2>

<form asp-action="Create" method="post" class="p-4 border rounded shadow-sm bg-light">
    <div class="form-group">
        <label asp-for="nombre_producto" class="form-label">Nombre del Producto</label>
        <input asp-for="nombre_producto" class="form-control" required />
        <span asp-validation-for="nombre_producto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="descripcion" class="form-label">Descripción</label>
        <textarea asp-for="descripcion" class="form-control" rows="3"></textarea>
        <span asp-validation-for="descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="fecha_vencimiento" class="form-label">Fecha de Vencimiento</label>
        <input asp-for="fecha_vencimiento" class="form-control" type="date" />
        <span asp-validation-for="fecha_vencimiento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="estado" class="form-label">Estado</label>
        <select asp-for="estado" class="form-select" required>
            <option value="">Seleccione un estado</option>
            <option value="true">Activo</option>
            <option value="false">Inactivo</option>
        </select>
        <span asp-validation-for="estado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="id_Categoria" class="form-label">Categoría</label>
        <select asp-for="id_Categoria" class="form-select" asp-items="ViewBag.Categorias" required>
            <option value="">Seleccione una categoría</option>
        </select>
        <span asp-validation-for="id_Categoria" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="id_proveedor" class="form-label">Proveedor</label>
        <select asp-for="id_proveedor" class="form-select" asp-items="ViewBag.Proveedores" required>
            <option value="">Seleccione un proveedor</option>
        </select>
        <span asp-validation-for="id_proveedor" class="text-danger"></span>
    </div>

    <div class="form-group mt-4">
        <input type="submit" value="Crear" class="btn btn-success" />
        <a href="@Url.Action("GetAll", "Producto")" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
