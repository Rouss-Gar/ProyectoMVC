@model List<Pago>

<h2>Lista de Pagos</h2>
<a asp-action="Create" class="btn btn-success">Agregar Nuevo Pago</a>

<table class="table-container">
    <thead>
        <tr>
            <th>Id Pago</th>
            <th>Id Orden</th>
            <th>Monto</th>
            <th>Método de Pago</th>
            <th>Fecha de Pago</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())

        {

            foreach (var pago in Model)

            {
                <tr>
                    <td>@pago.id_Pago</td>
                    <td>@pago.id_Orden</td>
                    <td>@pago.Monto.ToString("C")</td>
                    <td>@pago.MetodoPago</td>
                    <td>@pago.Fecha_Pago.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="EditPagoById" asp-route-id="@pago.id_Pago" class="btn btn-warning">Editar</a>
                    </td>
                </tr>
            }

        }

        else

        {
            <tr>
                <td colspan="6">No hay pagos disponibles.</td>
            </tr>
        }
    </tbody>
</table>
