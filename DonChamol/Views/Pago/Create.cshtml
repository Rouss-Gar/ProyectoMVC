@model Pago

@{
    ViewData["Title"] = "Crear Nuevo Pago";
    ViewData["ShowFooter"] = false;
}

<h2>Crear Nuevo Pago</h2>

<div class="container">
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Monto" class="form-label"></label>
            <input asp-for="Monto" class="form-control" required type="number" step="0.01" />
            <span asp-validation-for="Monto" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="MetodoPago" class="form-label"></label>
            <input asp-for="MetodoPago" class="form-control" required />
            <span asp-validation-for="MetodoPago" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Fecha_Pago" class="form-label"></label>
            <input asp-for="Fecha_Pago" class="form-control" required type="date" />
            <span asp-validation-for="Fecha_Pago" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Agregar Pago</button>
    </form>
</div>
<a href="@Url.Action("GetAllPago", "Pago")" class="btn btn-link">Volver a la lista de mesas</a>

