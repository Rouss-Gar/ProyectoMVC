<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DonChamol</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DonChamol.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
          integrity="sha384-5e2ESR8Ycmos6g3gAKr1Jvwye8sW4U1u/cAKulfVJnkakCcMqhOudbtPnvJ+nbv7" crossorigin="anonymous" />
    <link rel="stylesheet" href="~/css/estilos.css" />

    <style>
        /* Navbar */
        .navbar-custom {
            background: linear-gradient(135deg, #98C1D9, #EE6C4D);
            color: #fffafa;
            border-radius: 40px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .navbar-custom .navbar-brand {
                color: #fffafa;
                font-weight: bold;
                font-size: 1.5em;
                text-transform: uppercase;
                transition: color 0.3s ease;
            }

                .navbar-custom .navbar-brand:hover {
                    color: #FFB703;
                    text-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
                }

            .navbar-custom .navbar-nav .nav-link {
                color: #ffffff;
                font-weight: 600;
                transition: transform 0.3s, color 0.3s;
            }

                .navbar-custom .navbar-nav .nav-link:hover {
                    color: #FFB703;
                    transform: scale(1.1);
                }

        /* ¿Por qué elegir Don Chamol? */
        .choose-section {
            padding: 60px 0;
            background-color: #f8f9fa;
        }

            .choose-section h2 {
                color: #EE6C4D;
                font-weight: bold;
                margin-bottom: 30px;
            }

            .choose-section .card {
                border: none;
                border-radius: 10px;
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
                transition: transform 0.3s;
            }

                .choose-section .card:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
                }

            .choose-section .card-icon {
                font-size: 3em;
                color: #98C1D9;
            }

        /* Footer */
        .footer {
            background-color: #98C1D9;
            padding: 40px 0;
            color: #FFFAFA;
        }

            .footer h5 {
                font-size: 1.2em;
                font-weight: bold;
                color: #FFFAFA;
            }

            .footer a {
                color: #FFFAFA;
                text-decoration: none;
                transition: color 0.3s;
            }

                .footer a:hover {
                    color: #EE6C4D;
                }

            .footer .social-icons a {
                font-size: 1.5em;
                margin-right: 15px;
                color: #FFFAFA;
                transition: color 0.3s;
            }

                .footer .social-icons a:hover {
                    color: #FFB703;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-custom navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Logo a la izquierda -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DonChamol</a>

                <!-- Botón para navbar responsive -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menú centrado -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav navbar-nav-center">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Categoria" asp-action="GetAllCategoria">Categoria</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cliente" asp-action="GetAllCliente">Clientes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Mesas" asp-action="GetAllMesas">Mesas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="MenuItems" asp-action="GetAllMenuItems">Menu</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Meseros" asp-action="GetAllMeseros">Meseros</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Pago" asp-action="GetAllPago">Pago</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Orden" asp-action="GetAllOrdenes">Ordenes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Proveedor" asp-action="GetAll">Proveedores</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Producto" asp-action="GetAll">Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Ventas" asp-action="Get">Ventas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Inventario" asp-action="Get">Inventario</a>
                        </li>
                       
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (ViewData["ShowFooter"] == null || (bool)ViewData["ShowFooter"])
    {
        <footer class="border-top footer text-white">
            <div class="container text-white">
                &copy; 2024 - DonChamol - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
