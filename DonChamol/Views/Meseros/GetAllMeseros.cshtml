@model List<DonChamol.Models.Meseros>

<h2>Meseros</h2>
<a asp-action="Create" class="btn btn-primary">Agregar Nuevo Mesero</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Teléfono</th>
            <th>Correo</th>
            <th>Dirección</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var meseros in Model)
            {
                <tr>
                    <td>@meseros.id_Mesero</td>
                    <td>@meseros.Nombre</td>
                    <td>@meseros.Apellido</td>
                    <td>@meseros.Telefono</td>
                    <td>@meseros.Correo</td>
                    <td>@meseros.Direccion</td>
                    <td>@(meseros.Estado ? "Activo" : "Inactivo")</td>
                    <td>
                        <a asp-action="UpdateMesero" asp-route-id="@meseros.id_Mesero" class="btn btn-warning">Editar</a>
                        <form asp-action="DeleteMeseroById" asp-route-id="@meseros.id_Mesero" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                        <form asp-action="ToggleEstado" asp-route-id="@meseros.id_Mesero" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-secondary">
                                @(meseros.Estado ? "Desactivar" : "Activar")
                            </button>
                        </form>
                      
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9">No hay meseros disponibles.</td>
            </tr>
        }
    </tbody>
</table>
<style>
    /* Tabla de Meseros */
.table-container {
    max-height: 400px;
    overflow-y: auto;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.table {
    width: 100%;
    border-collapse: collapse;
    font-size: 16px;
    background-color: #ffffff;
    border-radius: 8px;
    overflow: hidden;
}

/* Encabezado */
.table thead {
    position: sticky;
    top: 0;
    background-color: #4CAF50; /* Verde moderno */
    color: #ffffff;
    z-index: 1;
}

.table thead th {
    padding: 12px;
    font-weight: bold;
    text-align: center;
    border-bottom: 2px solid #ddd;
    text-transform: uppercase;
}

/* Filas */
.table tbody tr:nth-child(even) {
    background-color: #f9fafb;
}

.table tbody tr:hover {
    background-color: #e0f7e0; /* Verde claro para hover */
    transition: background-color 0.3s ease;
}

.table tbody td {
    padding: 12px;
    text-align: center;
    border-bottom: 1px solid #ddd;
}

/* Botones de Acción */
.btn-primary {
    background-color: #4CAF50;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-primary:hover {
    background-color: #45a049;
    transform: translateY(-1px);
}

.btn-warning {
    background-color: #ff9800;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-warning:hover {
    background-color: #fb8c00;
    transform: translateY(-1px);
}

.btn-danger {
    background-color: #f44336;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-danger:hover {
    background-color: #e53935;
    transform: translateY(-1px);
}

.btn-secondary {
    background-color: #6c757d;
    border: none;
    color: #ffffff;
    padding: 8px 16px;
    border-radius: 5px;
    transition: background-color 0.3s ease, transform 0.2s ease;
}

.btn-secondary:hover {
    background-color: #5a6268;
    transform: translateY(-1px);
}

/* Alineación de Acciones */
.table tbody td.actions {
    display: flex;
    justify-content: center;
    gap: 10px;
}

</style>
