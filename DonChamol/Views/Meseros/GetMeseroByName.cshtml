@model Meseros

@{
    ViewData["Title"] = "Buscar Mesero por Nombre";
}

<h2>Buscar Mesero por Nombre</h2>

<!-- Formulario para ingresar el nombre del mesero -->
<div class="container">
    <form asp-action="GetMeseroByName" method="get">
        <div class="mb-3">
            <label for="nombre" class="form-label">Nombre del Mesero</label>
            <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Ingrese el nombre del mesero" required />
        </div>
        <button type="submit" class="btn btn-primary">Buscar</button>
    </form>
</div>

<!-- Mostrar detalles del mesero si existe un resultado -->
@if (Model != null)
{
    <h3>Detalles del Mesero</h3>
    <div class="container">
        <ul class="list-group">
            <li class="list-group-item"><strong>Nombre:</strong> @Model.Nombre</li>
            <li class="list-group-item"><strong>Apellido:</strong> @Model.Apellido</li>
            <li class="list-group-item"><strong>Teléfono:</strong> @Model.Telefono</li>
            <li class="list-group-item"><strong>Correo:</strong> @Model.Correo</li>
            <li class="list-group-item"><strong>Estado:</strong> @(Model.Estado ? "Activo" : "Inactivo")</li>
        </ul>
    </div>
}
else if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div class="alert alert-danger">
        @ViewData["ErrorMessage"]
    </div>
}
